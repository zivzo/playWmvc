@model IEnumerable<playWmvc.Models.User>

@{
    ViewBag.Title = "GetUserList";
}
@Html.Partial("SubMenu")
<h2>GetUserList</h2>

<p>
    @Html.ActionLink("Create New User", "AddUser", "Home")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HasGlasses)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr onclick="viewUser(this)">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasGlasses)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                @Html.ActionLink("Details", "ViewUser", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
            </td>
        </tr>
    }

</table>
